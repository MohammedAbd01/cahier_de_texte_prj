# Configuration Apache pour l'application IPIRNET
# Sécurisation et optimisation

# Protection du dossier uploads
<Files ~ "\.(php|phtml|php3|php4|php5|pl|py|jsp|asp|sh|cgi)$">
    Order Allow,Deny
    Deny from all
</Files>

# Protection des fichiers sensibles
<Files ~ "^(db_connect\.php|config\.php|\.htaccess|\.htpasswd)$">
    Order Allow,Deny
    Deny from all
</Files>

# Désactiver la liste des répertoires
Options -Indexes

# Protection contre les injections XSS
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
</IfModule>

# Compression GZIP pour optimiser les performances
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Cache des ressources statiques
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/ico "access plus 1 month"
</IfModule>

# Redirection personnalisée pour les erreurs
ErrorDocument 404 /projet_php_cahier_texte_101/404.php
ErrorDocument 403 /projet_php_cahier_texte_101/403.php
ErrorDocument 500 /projet_php_cahier_texte_101/500.php

# Limitation de la taille des uploads (10MB)
php_value upload_max_filesize 10M
php_value post_max_size 10M

# Configuration de sécurité PHP
php_flag register_globals off
php_flag magic_quotes_gpc off
php_flag allow_url_fopen off
php_flag allow_url_include off

# Masquer la version de PHP
php_flag expose_php off
